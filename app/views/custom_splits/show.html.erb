<h1>Custom split</h1>

<% balances = flash[:balances] %>

<% balances.each do |id, custom_amount| %>
  <ul>
    <% member = User.find_by(id: id.to_i) %>
    <li><%= member.balance_string(params[:group_id], custom_amount) %></li>
  </ul>
<% end %>

<%= link_to "Try a different split", new_group_custom_split_url(params[:group_id]) %>